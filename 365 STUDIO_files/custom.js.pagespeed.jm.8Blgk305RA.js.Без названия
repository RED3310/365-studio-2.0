"use strict";$('.form-block__inner, .popup__holder, .vacancy-form').on('submit',function(e){e.preventDefault();var form=this;var data=new URLSearchParams($(form).serialize());$.post(wpAjax.url,data.toString(),function(response){$(form).find('input.error').removeClass('error');$(form).find('p.error').remove();if(response['success']===false){$.each(response['data'],function(i,item){$(form).find("input[name=\"".concat(i,"\"]")).addClass('error').after("<p class=\"error\">".concat(item,"</p>"));$(form).find("textarea[name=\"".concat(i,"\"]")).addClass('error').after("<p class=\"error\">".concat(item,"</p>"));});}if(response['success']===true){$('.popup').removeClass('active');$('#book-success').addClass('active');$(form)[0].reset();}});});$('.subscribe-form').on('submit',function(e){e.preventDefault();var form=this;var data=new URLSearchParams($(form).serialize());$.post(wpAjax.url,data.toString(),function(response){$(form).find('input.error').removeClass('error');$(form).find('p.error').remove();if(response['success']===false){$.each(response['data'],function(i,item){$(form).find("input[name=\"".concat(i,"\"]")).addClass('error').after("<p class=\"error\">".concat(item,"</p>"));});}if(response['success']===true){$('.popup').removeClass('active');$('#subscribe-success').addClass('active');$(form)[0].reset();}});});